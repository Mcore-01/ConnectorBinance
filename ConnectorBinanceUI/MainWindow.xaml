<Window x:Class="ConnectorBinanceUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConnectorBinanceUI.View"
        mc:Ignorable="d"
        Title="ConnectorUI" Height="450" Width="1280">
    <Grid Margin="10">
        <TabControl>
            <TabItem>
                <TabItem.Header>
                    <TextBlock>Трейды WS</TextBlock>
                </TabItem.Header>
                <TabItem.Content>
                    <Grid>
                        <local:TradeView />
                    </Grid>
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock>Свечи WS</TextBlock>
                </TabItem.Header>
                <TabItem.Content>
                    <Grid>
                        <local:CandleView />
                    </Grid>
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock>Конвертер курсов Rest</TextBlock>
                </TabItem.Header>
                <TabItem.Content>
                    <Grid>
                        <local:WalletItemView />
                    </Grid>
                </TabItem.Content>
            </TabItem>
        </TabControl>
    </Grid>
</Window>