<Window x:Class="ConnectorBinanceUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConnectorBinanceUI"
        mc:Ignorable="d"
        Title="ConnectorUI" Height="450" Width="1280">
    <Grid Margin="10">
        <TabControl>
            <TabItem>
                <TabItem.Header>
                    <TextBlock>Трейды WS</TextBlock>
                </TabItem.Header>
                <TabItem.Content>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="0.5*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <DataGrid ItemsSource="{Binding Trades}" 
                                  Grid.Column="0"
                                  VerticalScrollBarVisibility="Visible"
                                  AutoGenerateColumns="False"
                                  >
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="100"></DataGridTextColumn>
                                <DataGridTextColumn Header="Pair" Binding="{Binding Pair}" Width="80"></DataGridTextColumn>
                                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="80"></DataGridTextColumn>
                                <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="80"></DataGridTextColumn>
                                <DataGridTextColumn Header="Side" Binding="{Binding Side}" Width="80"></DataGridTextColumn>
                                <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="160"></DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Grid.Column="1">
                            <TextBox Text="{Binding Pair, UpdateSourceTrigger=PropertyChanged}" Background="LightGray"></TextBox>
                            <Button Content="Загрузить данные" Command="{Binding GetTrades}" Background="Bisque"></Button>
                        </StackPanel>
                    </Grid>
                </TabItem.Content>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock>Свечи</TextBlock>
                </TabItem.Header>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
